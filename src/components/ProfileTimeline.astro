---
interface Props {
    items: {
        company: string;
        role: string;
        period: string;
        description?: string;
    }[];
    title: string;
}

const { items, title } = Astro.props;
---

<div class="mb-12">
    <h3 class="text-2xl font-bold text-brand-gold mb-6 uppercase tracking-wider border-b border-gray-700 pb-2">{title}</h3>
    <div class="space-y-8 border-l-2 border-gray-700 ml-3 pl-8 relative">
        {items.map((item) => (
            <div class="relative">
                <div class="absolute -left-[41px] top-1 w-5 h-5 rounded-full bg-brand-green border-4 border-[#202124]"></div>
                <div class="flex flex-col sm:flex-row sm:items-baseline justify-between mb-1">
                    <h4 class="text-xl font-bold text-white">{item.company}</h4>
                    <span class="text-brand-gold font-mono text-sm">{item.period}</span>
                </div>
                <div class="text-lg text-gray-300 font-medium mb-2">{item.role}</div>
                {item.description && <p class="text-gray-400 text-sm leading-relaxed max-w-2xl">{item.description}</p>}
            </div>
        ))}
    </div>
</div>
