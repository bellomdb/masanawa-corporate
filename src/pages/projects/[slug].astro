---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';
import { marked } from 'marked';




const { slug } = Astro.params;


let project = null;
let error = null;

if (supabase) {
    const result = await supabase
        .from('projects')
        .select('*')
        .eq('slug', slug)
        .single();
    project = result.data;
    error = result.error;
}

if (error || !project) {
    // If supabase is missing, we might still want to show 404 or handle it differently
    // For now, redirecting to 404 is safe if project not found
    return Astro.redirect('/404');
}

const contentHtml = marked.parse(project.content || '');
---

<Layout title={`${project.seo_title || project.name} - Masanawa`}>
    <!-- Hero Section -->
    <div class="relative bg-gray-900 text-white py-24 px-4 sm:px-6 lg:px-8 overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-brand-purple/90 to-brand-teal/90 z-10"></div>
        <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-20 z-0"></div>
        
        <div class="relative z-20 max-w-4xl mx-auto text-center">
            <div class="w-20 h-20 rounded-2xl mx-auto mb-8 flex items-center justify-center text-4xl font-bold shadow-2xl" style={`background-color: ${project.icon_color}`}>
                {project.icon_letter}
            </div>
            <h1 class="text-5xl md:text-6xl font-extrabold mb-6 tracking-tight">{project.name}</h1>
            <p class="text-xl text-white/90 max-w-2xl mx-auto leading-relaxed">{project.description}</p>
            
            {project.url && (
                <div class="mt-10">
                    <a href={project.url} target="_blank" class="inline-flex items-center gap-2 bg-white text-brand-purple px-8 py-3 rounded-full font-bold hover:bg-gray-100 transition-colors shadow-lg">
                        Visit Website
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                    </a>
                </div>
            )}
        </div>
    </div>

    <!-- Content Section -->
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <article class="prose prose-lg prose-purple mx-auto">
            <div set:html={contentHtml} />
        </article>
        
        <div class="mt-16 pt-8 border-t border-gray-200 text-center">
            <a href="/" class="text-brand-purple font-bold hover:text-brand-dark flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
                Back to Projects
            </a>
        </div>
    </div>
</Layout>

<style is:global>
    /* Custom Prose Styles for Markdown */
    .prose h2 {
        color: var(--brand-purple);
        font-family: 'Outfit', sans-serif;
        margin-top: 2em;
    }
    .prose p {
        line-height: 1.8;
    }
    .prose strong {
        color: var(--brand-teal);
    }
</style>
