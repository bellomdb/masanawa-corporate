    "Certified Field Operations Specialist - Human Rights Documentation",
    "Conflict Management & Resolution",
    "Community Mobilization Strategy",
    "Humanitarian Response Fundamentals",
    "Security Awareness in Field Operations",
    "Peacebuilding & Social Cohesion"
];

const skills = [
    "Strategic Civic Tech Implementation",
    "Human Rights Documentation & Advocacy",
    "Community Engagement & Mobilization",
    "Secure Information Systems",
    "Data Protection & Privacy",
    "Strategic Business Development",
    "Project Management & Leadership",
    "AI & Digital Innovation"
