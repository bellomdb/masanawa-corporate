---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Masanawa - Weavewell Industries Limited. Building the future of digital services in Africa through innovative AI-powered platforms." />
		<meta name="viewport" content="width=device-width" />
		<meta name="keywords" content="Masanawa, Weavewell Industries, AI Platforms, Nigeria, Civic Tech, Digital Solutions" />
		<meta name="author" content="Weavewell Industries Limited" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Building Africa's AI ecosystem" />
		<meta property="og:site_name" content="Masanawa" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="Building Africa's AI ecosystem" />
		
		<title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700;900&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
        <meta name="google-adsense-account" content="ca-pub-8370465467224716">
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8370465467224716" crossorigin="anonymous"></script>
	</head>
	<body class="bg-gray-50 text-gray-900 min-h-screen flex flex-col selection:bg-brand-purple selection:text-white" style="font-family: Georgia, 'Merriweather', serif;">
        <Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		/* Brand Colors */
		--brand-purple: #8B5CF6;
		--brand-teal: #14B8A6;
		--brand-gold: #FBBF24;
		
		/* Brand gradient */
		--brand-gradient: linear-gradient(
			135deg,
			var(--brand-purple) 0%,
			var(--brand-teal) 50%,
			var(--brand-gold) 100%
		);
	}
    
    body {
        font-family: Georgia, 'Merriweather', serif;
        font-weight: 400;
        line-height: 1.6;
    }
    
    h1, h2, h3, h4, h5, h6 {
        font-family: Georgia, 'Merriweather', serif;
        font-weight: 700;
        line-height: 1.2;
    }
	
	* {
		box-sizing: border-box;
	}
</style>
